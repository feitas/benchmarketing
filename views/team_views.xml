<odoo>
	<data>

		<record id="bench_marketing_team_view_tree" model="ir.ui.view">
	        <field name="name">bench.marketing.team.tree</field>
	        <field name="model">bench.marketing.team</field>
	        <field name="arch" type="xml">
	            <tree>
	                <field name="name"/>
	                <field name="responsible"/>
	            </tree>
	        </field>
    	</record>

    	<record id="bench_marketing_team_view_form" model="ir.ui.view">
	        <field name="name">bench.marketing.team.view.form</field>
	        <field name="model">bench.marketing.team</field>
	        <field name="arch" type="xml">
	            <form string="Team">
	                <sheet>
	                    <group>
	                        <group>
	                            <field name="name"/>
	                            <field name="responsible"/>
	                        </group>
	                        <field name="description" />
	                    </group>
	                    
	                </sheet>
	            </form>
	        </field>
	    </record>

	</data>
</odoo>